{
  "name": "release-test",
  "version": "1.3.1",
  "main": "index.js",
  "repository": "git@github.com:bmenant/release-test.git",
  "author": "Benjamin Menant <dev@menant-benjamin.fr>",
  "license": "MIT",
  "scripts": {
    "test": "jasmine --config=src/spec/support/jasmine.json"
  },
  "devDependencies": {
    "@semantic-release/changelog": "semantic-release/changelog",
    "@semantic-release/exec": "semantic-release/exec",
    "@semantic-release/git": "semantic-release/git",
    "@types/jasmine": "^2.8.8",
    "jasmine": "^3.1.0",
    "semantic-release": "^15.8.1",
    "typescript": "^2.9.2"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/exec",
        "cmd": "yarn tsc && sed -i 's/\"version\":\\s*\"${lastRelease.version}\"/\"version\": \"${nextRelease.version}\"/' package.json"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "yarn.lock",
          "CHANGELOG.md",
          "dist/**/*"
        ],
        "message": "chore: release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "dist/asset.txt",
            "label": "Text Asset"
          }
        ]
      }
    ]
  }
}
